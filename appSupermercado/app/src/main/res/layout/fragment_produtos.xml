<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/produtos"
    tools:context="appsupermercado.cursoandroid.com.appsupermercado.Produtos">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/produtos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="170dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/arroz" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="170dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cafe" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="170dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/feijao" />

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bombril" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/desinfetante" />

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/papelhigienico" />

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView26"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cervejaskol" />

                    <ImageView
                        android:id="@+id/imageView27"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/coca2l" />

                    <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/guarana" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
